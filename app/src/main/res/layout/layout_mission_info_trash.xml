<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/et_border"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_performer_cur_mission_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종량제"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time_limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="제한시간"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_performer_cur_mission_category"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:text="29:52"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/tv_time_limit_title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_mission_point_image"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/sample"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_performer_cur_mission_category" />

        <TextView
            android:id="@+id/tv_mission_point_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="GS25 - 성수클래스점"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_mission_point_image"
            app:layout_constraintTop_toBottomOf="@id/tv_performer_cur_mission_category" />

        <ImageView
            android:id="@+id/iv_performer_map_mission_point"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/sample"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_mission_point_address"
            app:layout_constraintTop_toBottomOf="@id/tv_performer_cur_mission_category" />

        <Button
            android:id="@+id/btn_performer_mission_detail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="미션내역보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_performer_map_mission_point" />

        <Button
            android:id="@+id/btn_performer_too_many_people"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="사람이 많아요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_performer_mission_detail" />

        <Button
            android:id="@+id/btn_performer_purchase_complete"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="구매완료"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_performer_too_many_people" />

        <Button
            android:id="@+id/btn_take_picture"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="촬영"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_performer_purchase_complete"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sample"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_performer_purchase_complete" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>